<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Topic Form</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="styles.css">
</head>
<style>
    /* General Styles */
    body {
        background-color: rgb(174, 243, 174);
    }

    /* Colors */
    .bg-green {
        background-color: green;
    }

    .text-green {
        color: green;
    }

    .btn-green {
        background-color: green;
        color: #fff;
        border: none;
    }

    .btn-green:hover {
        background-color: green;
    }

    .bg-light-gray {
        background-color: #f8f9fa;
    }

    /* Card Styling */
    .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: green;
        color: white;
    }

    .card-footer a {
        color: green;
    }

    .card-footer a:hover {
        color: green;
    }


    /* Table UI css */

    .table-hover tbody tr:hover {
        background-color: #2e2e2e;
    }

    .table thead th {
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }

    .btn-sm:hover {
        background-color: green;
    }

    a:hover {
        color: #ffcccc;
    }
</style>
</style>

<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5">
                    <div class="card-header text-center text-light bg-green">
                        <h3>Add Topic</h3>
                    </div>
                    <div class="card-body bg-light-gray">
                        <form action="/subTopicForm" method="POST">
                            <div class="form-group">
                                <label for="subtopic" class="text-green">Sub Topic Name</label>
                                <input type="text" class="form-control" id="subtopic" placeholder="Enter subtopic name"
                                    name="subtopic" required>

                                <label for="topicname" class="text-maroon" style="margin-top: 12px;">Choose a Topic</label><br>
                                <select id="topicname" name="topicname" style="width: 35%;">
                                    <% topic.forEach((Alltopic) => { %>
                                        <option value="<%= Alltopic._id %>"><%= Alltopic.topic %></option>
                                    <% }); %>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-green btn-block">Add SubTopic</button>
                        </form>
                    </div>
                    <div class="card-footer text-center">
                        <small class="text-muted">Want to go back? <a href="/">Home</a></small>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.7/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>