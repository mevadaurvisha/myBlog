<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Topics and Sub Topics</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Custom CSS -->
    <style>
        body {
            background-color: rgb(174, 243, 174);
            font-family: 'Helvetica', sans-serif;
        }
        h2 {
            text-align: center;
            margin-top: 40px;
            font-weight: 600;
            color: #444;
        }
        .topic-container {
            background-color: green;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            transition: background-color 0.2s ease;
        }
        .topic-title {
            font-size: 1.2rem;
            font-weight: bold;
            color: white;
            margin-bottom: 15px;
        }
        .subtopic-list {
            list-style-type: none;
            padding-left: 0;
            margin: 0;
            background-color: white;
            border-radius: 8px;
            padding: 10px;
        }
        .subtopic-list li {
            margin-bottom: 10px;
            font-size: 1rem;
            color: #333;
        }
        .container {
            margin-top: 40px;
        }
        @media (min-width: 768px) {
            .topic-container {
                margin-left: 10px;
                margin-right: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Topics and Sub Topics</h2>
        <div class="row" style="margin-top: 60px;">
            <% topics.forEach((topic) => { %>
                <div class="col-md-6 col-lg-4">
                    <div class="topic-container">
                        <div class="topic-title">
                            Topic: <%= topic.topic %>
                        </div>
                        <ul class="subtopic-list">
                            <% subtopics.forEach((subTopic) => { %>
                                <% if (subTopic.topic && subTopic.topic._id.toString() === topic._id.toString()) { %>
                                    <li>SubTopic: <%= subTopic.subTopic %></li>
                                <% } %>
                            <% }); %>
                        </ul>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
